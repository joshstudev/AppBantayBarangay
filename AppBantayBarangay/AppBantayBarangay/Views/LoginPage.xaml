<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBantayBarangay.Views.LoginPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F5F5F5">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryBlue">#007AFF</Color>
            <Color x:Key="AccentYellow">#FFD700</Color>
            <Color x:Key="AccentRed">#FF3B30</Color>
            <Color x:Key="AccentGreen">#34C759</Color>
            <Color x:Key="AccentOrange">#FF9500</Color>
            <Color x:Key="LightGray">#F5F5F5</Color>
            <Color x:Key="MediumGray">#E0E0E0</Color>
            <Color x:Key="DarkGray">#666666</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header (Matching Dashboard Theme) -->
        <Grid Grid.Row="0" BackgroundColor="{StaticResource PrimaryBlue}" Padding="20,10" HeightRequest="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Frame Grid.Column="0" 
                   HeightRequest="50" 
                   WidthRequest="50" 
                   CornerRadius="25" 
                   Padding="3" 
                   BackgroundColor="Transparent" 
                   BorderColor="Transparent"
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   HasShadow="False">
                <Image Source="logo" 
                       Aspect="AspectFit"
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </Frame>
            
            <StackLayout Grid.Column="1" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Center">
                <Label Text="Bantay Barangay" 
                       TextColor="White" 
                       FontSize="22" 
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,53,0"/>
                <Label Text="Community Reporting System" 
                       TextColor="White" 
                       FontSize="12" 
                       HorizontalTextAlignment="Center"
                       Opacity="0.9"
                       Margin="0,-4,58,0"/>
            </StackLayout>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="20" Spacing="0" VerticalOptions="CenterAndExpand">
                
                <!-- Welcome Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="20"
                       Padding="30"
                       HasShadow="True"
                       Margin="0,20,0,20">
                    <StackLayout Spacing="20">
                        
                        <!-- Welcome Icon -->
                        <Frame BackgroundColor="{StaticResource PrimaryBlue}"
                               CornerRadius="40"
                               HeightRequest="80"
                               WidthRequest="80"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Label Text="👋" 
                                   FontSize="40"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>

                        <!-- Welcome Text -->
                        <Label Text="Welcome!"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               HorizontalOptions="Center"/>

                        <Label Text="Sign in to continue"
                               FontSize="14"
                               TextColor="{StaticResource DarkGray}"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10"/>

                        <!-- User Type Selection -->
                        <Label Text="I am a..."
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"/>

                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Picker x:Name="UserTypePicker"
                                    Title="Select User Type"
                                    TextColor="{StaticResource PrimaryBlue}"
                                    FontSize="16"
                                    Margin="10,0">
                                <Picker.Items>
                                    <x:String>Official</x:String>
                                    <x:String>Resident</x:String>
                                </Picker.Items>
                            </Picker>
                        </Frame>

                        <!-- Email Address -->
                        <Label Text="Email Address"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               Margin="0,10,0,0"/>

                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="EmailEntry"
                                   Placeholder="Enter your email address"
                                   Keyboard="Email"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="16"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Password -->
                        <Label Text="Password"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               Margin="0,10,0,0"/>

                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="Enter your password"
                                   IsPassword="True"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="16"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Forgot Password -->
                        <Label Text="Forgot Password?"
                               FontSize="12"
                               TextColor="{StaticResource PrimaryBlue}"
                               HorizontalOptions="End"
                               Margin="0,5,0,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnForgotPasswordClicked"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Login Button -->
                        <Button Text="🔐 LOGIN"
                                BackgroundColor="{StaticResource PrimaryBlue}"
                                TextColor="White"
                                CornerRadius="10"
                                Padding="15"
                                FontSize="18"
                                FontAttributes="Bold"
                                Clicked="OnLoginClicked"
                                Margin="0,20,0,0"/>

                        <!-- Divider -->
                        <Grid Margin="0,20,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <BoxView Grid.Column="0"
                                    HeightRequest="1"
                                    BackgroundColor="{StaticResource MediumGray}"
                                    VerticalOptions="Center"/>
                            
                            <Label Grid.Column="1"
                                   Text="OR"
                                   TextColor="{StaticResource DarkGray}"
                                   FontSize="12"
                                   Margin="10,0"/>
                            
                            <BoxView Grid.Column="2"
                                    HeightRequest="1"
                                    BackgroundColor="{StaticResource MediumGray}"
                                    VerticalOptions="Center"/>
                        </Grid>

                        <!-- Register Button -->
                        <Button Text="📝 CREATE NEW ACCOUNT"
                                BackgroundColor="White"
                                TextColor="{StaticResource PrimaryBlue}"
                                BorderColor="{StaticResource PrimaryBlue}"
                                BorderWidth="2"
                                CornerRadius="10"
                                Padding="15"
                                FontSize="16"
                                FontAttributes="Bold"
                                Clicked="OnRegisterClicked"/>

                    </StackLayout>
                </Frame>

                <!-- Info Section -->
                <Frame BackgroundColor="#E3F2FD"
                       BorderColor="{StaticResource PrimaryBlue}"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="False"
                       Margin="0,0,0,20">
                    <StackLayout Spacing="8">
                        <Label Text="ℹ️ About Bantay Barangay" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"/>
                        <Label Text="• Report community issues quickly and easily"
                               FontSize="12"
                               TextColor="{StaticResource DarkGray}"/>
                        <Label Text="• Track the status of your reports in real-time"
                               FontSize="12"
                               TextColor="{StaticResource DarkGray}"/>
                        <Label Text="• Help make your barangay a better place"
                               FontSize="12"
                               TextColor="{StaticResource DarkGray}"/>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
