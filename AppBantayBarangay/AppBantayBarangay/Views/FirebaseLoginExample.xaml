<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBantayBarangay.Views.FirebaseLoginExample"
             Title="Firebase Login Example"
             BackgroundColor="#F5F5F5">
    
    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand">
            
            <!-- Logo/Header -->
            <Label Text="🔥 Firebase Auth"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#FF6B35"/>
            
            <Label Text="Example Login Page"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="#666"
                   Margin="0,0,0,20"/>
            
            <!-- Email Entry -->
            <Frame CornerRadius="10" 
                   Padding="0" 
                   HasShadow="True"
                   BorderColor="Transparent">
                <Entry x:Name="EmailEntry"
                       Placeholder="Email"
                       Keyboard="Email"
                       TextColor="#333"
                       PlaceholderColor="#999"
                       Margin="15,10"/>
            </Frame>
            
            <!-- Password Entry -->
            <Frame CornerRadius="10" 
                   Padding="0" 
                   HasShadow="True"
                   BorderColor="Transparent">
                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       TextColor="#333"
                       PlaceholderColor="#999"
                       Margin="15,10"/>
            </Frame>
            
            <!-- Forgot Password -->
            <Label Text="Forgot Password?"
                   FontSize="14"
                   TextColor="#FF6B35"
                   HorizontalOptions="End"
                   Margin="0,-10,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnForgotPasswordClicked"/>
                </Label.GestureRecognizers>
            </Label>
            
            <!-- Sign In Button -->
            <Button x:Name="SignInButton"
                    Text="Sign In"
                    BackgroundColor="#FF6B35"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnSignInClicked"
                    Margin="0,10,0,0"/>
            
            <!-- Sign Up Button -->
            <Button x:Name="SignUpButton"
                    Text="Create Account"
                    BackgroundColor="Transparent"
                    TextColor="#FF6B35"
                    BorderColor="#FF6B35"
                    BorderWidth="2"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnSignUpClicked"/>
            
            <!-- Activity Indicator -->
            <ActivityIndicator x:Name="ActivityIndicator"
                              IsRunning="False"
                              Color="#FF6B35"
                              HeightRequest="40"
                              WidthRequest="40"
                              HorizontalOptions="Center"/>
            
            <!-- Info Text -->
            <StackLayout Orientation="Horizontal" 
                        HorizontalOptions="Center"
                        Margin="0,20,0,0">
                <Label Text="ℹ️" FontSize="16"/>
                <Label Text="This is a Firebase example page"
                       FontSize="12"
                       TextColor="#999"
                       VerticalOptions="Center"
                       Margin="5,0,0,0"/>
            </StackLayout>
            
            <!-- Firebase Info -->
            <Frame BackgroundColor="#E8F5E9"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="False"
                   BorderColor="Transparent"
                   Margin="0,10,0,0">
                <StackLayout Spacing="5">
                    <Label Text="Firebase Configuration:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    <Label Text="• Project: bantaybarangay"
                           FontSize="12"
                           TextColor="#2E7D32"/>
                    <Label Text="• Authentication: Email/Password"
                           FontSize="12"
                           TextColor="#2E7D32"/>
                    <Label Text="• Database: Realtime Database"
                           FontSize="12"
                           TextColor="#2E7D32"/>
                </StackLayout>
            </Frame>
            
        </StackLayout>
    </ScrollView>
    
</ContentPage>
