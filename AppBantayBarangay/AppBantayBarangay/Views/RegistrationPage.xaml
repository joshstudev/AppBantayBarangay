<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBantayBarangay.Views.RegistrationPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F5F5F5">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryBlue">#007AFF</Color>
            <Color x:Key="AccentYellow">#FFD700</Color>
            <Color x:Key="AccentRed">#FF3B30</Color>
            <Color x:Key="AccentGreen">#34C759</Color>
            <Color x:Key="AccentOrange">#FF9500</Color>
            <Color x:Key="LightGray">#F5F5F5</Color>
            <Color x:Key="MediumGray">#E0E0E0</Color>
            <Color x:Key="DarkGray">#666666</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header (Matching Dashboard Theme) -->
        <Grid Grid.Row="0" BackgroundColor="{StaticResource PrimaryBlue}" Padding="20,10" HeightRequest="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Frame Grid.Column="0" 
                   HeightRequest="50" 
                   WidthRequest="50" 
                   CornerRadius="25" 
                   Padding="3" 
                   BackgroundColor="Transparent" 
                   BorderColor="Transparent"
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   HasShadow="False">
                <Image Source="logo" 
                       Aspect="AspectFit"
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </Frame>
            
            <StackLayout Grid.Column="1" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Center">
                <Label Text="Bantay Barangay" 
                       TextColor="White" 
                       FontSize="22" 
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Create New Account" 
                       TextColor="White" 
                       FontSize="12" 
                       HorizontalTextAlignment="Center"
                       Opacity="0.9"/>
            </StackLayout>

            <Button Grid.Column="2"
                    x:Name="BackButton"
                    Text="←"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="24"
                    HeightRequest="40"
                    WidthRequest="40"
                    CornerRadius="20"
                    Padding="0"
                    VerticalOptions="Center"
                    Clicked="OnBackClicked"/>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="15" Spacing="15">
                
                <!-- Registration Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="20"
                       Padding="25"
                       HasShadow="True"
                       Margin="0,15,0,0">
                    <StackLayout Spacing="15">
                        
                        <!-- Registration Icon -->
                        <Frame BackgroundColor="{StaticResource AccentGreen}"
                               CornerRadius="35"
                               HeightRequest="70"
                               WidthRequest="70"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Label Text="📝" 
                                   FontSize="35"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>

                        <!-- Title -->
                        <Label Text="Join Bantay Barangay"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               HorizontalOptions="Center"/>

                        <Label Text="Fill in your details to get started"
                               FontSize="13"
                               TextColor="{StaticResource DarkGray}"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10"/>

                        <!-- Personal Information Section -->
                        <Label Text="Personal Information"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               Margin="0,10,0,5"/>

                        <!-- First Name -->
                        <Label Text="First Name *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource DarkGray}"/>
                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="FirstNameEntry"
                                   Placeholder="Enter your first name"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="15"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Middle Name -->
                        <Label Text="Middle Name"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource DarkGray}"/>
                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="MiddleNameEntry"
                                   Placeholder="Enter your middle name (optional)"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="15"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Last Name -->
                        <Label Text="Last Name *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource DarkGray}"/>
                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="LastNameEntry"
                                   Placeholder="Enter your last name"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="15"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Contact Information Section -->
                        <Label Text="Contact Information"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               Margin="0,15,0,5"/>

                        <!-- Email -->
                        <Label Text="Email Address *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource DarkGray}"/>
                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="EmailEntry"
                                   Placeholder="your.email@example.com"
                                   Keyboard="Email"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="15"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Phone Number -->
                        <Label Text="Phone Number *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource DarkGray}"/>
                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="PhoneNumberEntry"
                                   Placeholder="09XX XXX XXXX"
                                   Keyboard="Telephone"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="15"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Address -->
                        <Label Text="Address *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource DarkGray}"/>
                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="AddressEntry"
                                   Placeholder="Street, Barangay, City"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="15"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Security Section -->
                        <Label Text="Security"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryBlue}"
                               Margin="0,15,0,5"/>

                        <!-- Password -->
                        <Label Text="Password *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource DarkGray}"/>
                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="Create a strong password"
                                   IsPassword="True"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="15"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Confirm Password -->
                        <Label Text="Confirm Password *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource DarkGray}"/>
                        <Frame BorderColor="{StaticResource PrimaryBlue}"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="White">
                            <Entry x:Name="ConfirmPasswordEntry"
                                   Placeholder="Re-enter your password"
                                   IsPassword="True"
                                   TextColor="{StaticResource DarkGray}"
                                   PlaceholderColor="{StaticResource MediumGray}"
                                   FontSize="15"
                                   Margin="10,0"/>
                        </Frame>

                        <!-- Register Button -->
                        <Button Text="✓ CREATE ACCOUNT"
                                BackgroundColor="{StaticResource AccentGreen}"
                                TextColor="White"
                                CornerRadius="10"
                                Padding="15"
                                FontSize="18"
                                FontAttributes="Bold"
                                Clicked="OnRegisterClicked"
                                Margin="0,20,0,0"/>

                        <!-- Divider -->
                        <Grid Margin="0,15,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <BoxView Grid.Column="0"
                                    HeightRequest="1"
                                    BackgroundColor="{StaticResource MediumGray}"
                                    VerticalOptions="Center"/>
                            
                            <Label Grid.Column="1"
                                   Text="OR"
                                   TextColor="{StaticResource DarkGray}"
                                   FontSize="12"
                                   Margin="10,0"/>
                            
                            <BoxView Grid.Column="2"
                                    HeightRequest="1"
                                    BackgroundColor="{StaticResource MediumGray}"
                                    VerticalOptions="Center"/>
                        </Grid>

                        <!-- Login Button -->
                        <Button Text="🔐 ALREADY HAVE AN ACCOUNT? LOGIN"
                                BackgroundColor="White"
                                TextColor="{StaticResource PrimaryBlue}"
                                BorderColor="{StaticResource PrimaryBlue}"
                                BorderWidth="2"
                                CornerRadius="10"
                                Padding="15"
                                FontSize="14"
                                FontAttributes="Bold"
                                Clicked="OnLoginClicked"/>

                    </StackLayout>
                </Frame>

                <!-- Info Section -->
                <Frame BackgroundColor="#E8F5E9"
                       BorderColor="{StaticResource AccentGreen}"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="False"
                       Margin="0,0,0,20">
                    <StackLayout Spacing="8">
                        <Label Text="ℹ️ Registration Information" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{StaticResource AccentGreen}"/>
                        <Label Text="• All fields marked with * are required"
                               FontSize="12"
                               TextColor="{StaticResource DarkGray}"/>
                        <Label Text="• Your information is kept secure and private"
                               FontSize="12"
                               TextColor="{StaticResource DarkGray}"/>
                        <Label Text="• You'll be registered as a Resident by default"
                               FontSize="12"
                               TextColor="{StaticResource DarkGray}"/>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
